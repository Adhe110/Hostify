                    android:layout_height="match_parent">

                    <!-- Gambar -->
                    <ImageView
                        android:id="@+id/property_image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image7" />

