                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Rp 6.000.000/Month"
                            android:textColor="#AA141111"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                        <Button
